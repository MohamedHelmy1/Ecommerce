<script>
    $(document).ready(function () {

        $.ajax({
            url: "/Admin/Dacboord",
            type: "Get",
            contenttype: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                $('#Allprice').text(result[1]);
                $('#customer').text(result[3]);
                $('#Product').text(result[2]);
                $('#OrederCount').text(result[0]);
            }
        });

    })
</script>
<script>
    $(document).ready(function () {


        $.getJSON("/Admin/payedformonth", function (data) {
            var Names = []
            var Qts = []

            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];

            for (var i = 0; i < monthNames.length; i++) {
                var Amount = 0;

                for (var j = 0; j < data.length; j++) {
                    if (monthNames[i] == data[j].time) {
                        Amount += data[j].AmountPayed;
                    }

                }
                Names.push(monthNames[i]);
                Qts.push(Amount);
            }

            Highcharts.chart('container', {
                chart: {
                    type: 'line'
                },
                title: {
                    text: 'Monthly Customer Payed'
                },
                subtitle: {
                    text: ''
                },
                xAxis: {
                    categories: Names
                },
                yAxis: {
                    title: {
                        text: 'Amoumet payed ($)'
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'Trend',
                    data: Qts
                }]
            });
        });

    });



</script>

